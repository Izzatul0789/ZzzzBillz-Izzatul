<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/yellow2"
    tools:context=".AboutMeActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:padding="24dp">

            <!-- Top Heading -->
            <TextView
                android:id="@+id/aboutMeHeading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="About Me"
                android:textAlignment="center"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:fontFamily="sans-serif-medium"
                android:layout_marginBottom="16dp" />

            <!-- Outer Container Box -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp"
                android:background="#CCFFFFFF"
                android:elevation="4dp"
                android:layout_margin="16dp">

                <!-- Consistent 16sp for all TextViews -->
                <TextView
                    android:id="@+id/fullname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:text="Fullname: Izzatul Nabiela Binti Mohammad Shukri"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/studentID"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:text="Student ID: 2023104469"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/courseCode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:text="Course Code: ICT602"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/courseName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:text="Course Name: Mobile Technology and Development"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#000000" />

                <!-- Copyright Statement -->
                <TextView
                    android:id="@+id/copyrightLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Copyright Statement:"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:id="@+id/declaration"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp"
                    android:text="I hereby declare that this project is my own work, except for summaries and quotations which have been duly acknowledged. This submission is made in accordance with the requirements of the course and has not been submitted for any other academic purpose."
                    android:textSize="16sp"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/githubLink"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="GitHub Link: https://github.com/yourusername/yourrepository"
                    android:autoLink="web"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_marginBottom="24dp" />

                <Button
                    android:id="@+id/btnStart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Let's Start"
                    android:backgroundTint="#2E7D32"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:elevation="4dp"
                    android:layout_gravity="center"
                    android:paddingLeft="32dp"
                    android:paddingRight="32dp"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp" />
            </LinearLayout>

            <!-- Footer -->
            <TextView
                android:id="@+id/copyright"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Â© 2025 Izzatul Nabiela"
                android:textAlignment="center"
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_marginTop="16dp" />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
